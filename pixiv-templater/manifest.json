{
  "manifest_version": 3,
  "name": "Pixiv Templater",
  "version": "2.0.10",
  "description": "Auto-fill Pixiv upload page with predefined templates",
  "author": "gabszap",
  "browser_specific_settings": {
    "gecko": {
      "id": "pixiv-templater@gabszap",
      "strict_min_version": "128.0",
      "update_url": "https://gabszap.github.io/pixiv-templater/updates.json"
    }
  },
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "96": "icons/96.png",
    "128": "icons/128.png"
  },
  "permissions": ["storage", "tabs"],
  "background": {
    "scripts": ["background.js"]
  },
  "host_permissions": ["*://www.pixiv.net/*"],
  "options_page": "browser-ui/options.html",
  "content_scripts": [
    {
      "matches": ["*://www.pixiv.net/illustration/create*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "browser-polyfill.js",
        "debug-logger.js",
        "page-logger.js",
        "libs/jquery.min.js",
        "libs/emoji-mart.js",
        "libs/emoji-data.json",
        "templater.js",
        "ui/ui.html",
        "ui/ui.css",
        "ui/ui.js"
      ],
      "matches": ["*://www.pixiv.net/*"]
    }
  ]
}
