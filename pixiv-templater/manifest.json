{
  "manifest_version": 3,
  "name": "Pixiv Templater",
  "version": "2.1.0",
  "description": "Auto-fill Pixiv upload page with predefined templates",
  "author": "gabszap",
  "browser_specific_settings": {
    "gecko": {
      "id": "pixiv-templater@gabszap",
      "strict_min_version": "128.0",
      "update_url": "https://gabszap.github.io/pixiv-templater/pixiv-templater/updates.json",
      "data_collection_permissions": {
        "required": [
          "none"
        ]
      }
    }
  },
  "icons": {
    "16": "assets/icons/16.png",
    "32": "assets/icons/32.png",
    "48": "assets/icons/48.png",
    "96": "assets/icons/96.png",
    "128": "assets/icons/128.png",
    "256": "assets/icons/icon.svg"
  },
  "action": {
    "default_icon": {
      "16": "assets/icons/16.png",
      "32": "assets/icons/32.png",
      "48": "assets/icons/48.png",
      "96": "assets/icons/96.png",
      "128": "assets/icons/128.png",
      "256": "assets/icons/icon.svg"
    },
    "default_title": "Pixiv Templater"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "host_permissions": [
    "*://www.pixiv.net/*",
    "*://danbooru.donmai.us/*"
  ],
  "options_page": "dashboard/dashboard.html",
  "content_scripts": [
    {
      "matches": [
        "*://www.pixiv.net/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "browser-polyfill.js",
        "debug-logger.js",
        "page-logger.js",
        "i18n.js",
        "locales/*.json",
        "libs/jquery.min.js",
        "libs/emoji-mart.js",
        "libs/emoji-data.json",
        "templater.js",
        "tag-translator.js",
        "upload-translator.js",
        "floating-panel/ui.html",
        "floating-panel/ui.css",
        "floating-panel/ui.js"
      ],
      "matches": [
        "*://www.pixiv.net/*"
      ]
    }
  ]
}