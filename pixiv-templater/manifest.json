{
  "manifest_version": 3,
  "name": "Pixiv Templater",
  "version": "2.0.4",
  "description": "Auto-fill Pixiv upload page with predefined templates",
  "author": "gabszap",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "permissions": ["storage"],
  "host_permissions": ["*://www.pixiv.net/*"],
  "options_page": "browser-ui/options.html",
  "content_scripts": [
    {
      "matches": ["*://www.pixiv.net/illustration/create*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "browser-polyfill.js",
        "libs/jquery.min.js",
        "libs/lucide.min.js",
        "page-lucide-bridge.js",
        "templater.js",
        "ui/ui.html",
        "ui/ui.css",
        "ui/ui.js"
      ],
      "matches": ["*://www.pixiv.net/*"]
    }
  ]
}
