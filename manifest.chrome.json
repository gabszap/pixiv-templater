{
  "manifest_version": 3,
  "name": "Pixiv Templater",
  "version": "2.1.3",
  "description": "Auto-fill Pixiv upload page with predefined templates",
  "icons": {
    "16": "assets/icons/16.png",
    "32": "assets/icons/32.png",
    "48": "assets/icons/48.png",
    "96": "assets/icons/96.png",
    "128": "assets/icons/128.png"
  },
  "action": {
    "default_icon": {
      "16": "assets/icons/16.png",
      "32": "assets/icons/32.png",
      "48": "assets/icons/48.png",
      "96": "assets/icons/96.png",
      "128": "assets/icons/128.png"
    },
    "default_title": "Pixiv Templater"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://www.pixiv.net/*",
    "*://danbooru.donmai.us/*"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "options_page": "src/dashboard/dashboard.html",
  "content_scripts": [
    {
      "matches": [
        "*://www.pixiv.net/*"
      ],
      "js": [
        "src/content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/utils/browser-polyfill.js",
        "src/utils/debug-logger.js",
        "src/utils/page-logger.js",
        "src/core/i18n.js",
        "locales/*.json",
        "libs/jquery.js",
        "libs/emoji-mart.js",
        "libs/emoji-data.json",
        "src/core/templater.js",
        "src/core/tag-translator.js",
        "src/core/upload-translator.js",
        "src/floating-panel/ui.html",
        "src/floating-panel/ui.css",
        "src/floating-panel/ui.js"
      ],
      "matches": [
        "*://www.pixiv.net/*"
      ]
    }
  ]
}
